{
    "store.custom#herramientas-manuales-llaves-y-desarmadores":{
        "blocks":[
            "list-context.image-list#full-banner",
			"flex-layout.row#hmld-row-title",
			"flex-layout.row#hmld-banners",
			"flex-layout.row#hmld-row-title-2",
			"shelf#hmld-recommended-products"
        ]
    },
	"flex-layout.row#hmld-row-title": {
	  "children": [
	    "rich-text#hmld-title"
	  ]
	},
	"flex-layout.row#hmld-row-title-2": {
	  "children": [
	    "rich-text#hmld-title"
	  ]
	},

  "flex-layout.row#hmld-banners":{
      "children":[
        "list-context.image-list#hmld-list"
      ],
      "props":{
        "blockClass":"mini-banners-1",
        "horizontalAlign":"center"
      }
  },
  "list-context.image-list#hmld-list": {
      "children": ["slider-layout#mini-banners-1"],
      "props": {
        "height": 375,
        "images": [
          { 
            "image": "https://maraga.vtexassets.com/assets/vtex.file-manager-graphql/images/5bc5f52c-5fa6-4deb-a6eb-5ff7e82bc925___74708ec600347ceccc715c0c09caa6cd.jpg",
            "link":"https://www.maraga.mx/soldadura-y-generadores/accesorios/caretas"
          },
          { 
            "image": "/arquivos/industrial.jpg",
            "link":"/industrial"
          }
        ]
      }
  },
  "slider-layout#hmld-slider": {
    "props": {
      "blockClass":"landing",
      "showPaginationDots": "always",
      "showNavigationArrows": "desktopOnly",
      "itemsPerPage":{ 
      "desktop": 4, 
      "tablet": 3, 
      "phone": 2 
      }
    }
  },
    "rich-text#hmld-title":{
      "props": {
        "textAlignment": "Left",
        "textPosition": "Left",
        "text": "**Protección de soldador y para máquinas de soldar y generadores**",
        "textColor": "muted-1",
        "font": "t-heading-5",
        "blockClass": "title-01"
      }
    },
    "rich-text#hmld-title-2":{
      "props": {
        "textAlignment": "Left",
        "textPosition": "Left",
        "text": "**Accesorios del catálogo Welding de Maraga**",
        "textColor": "muted-1",
        "font": "t-heading-5",
        "blockClass": "title-01"
      }
    },
    "shelf#hmld-recommended-products": {
      "blocks": ["product-summary.shelf"],
      "props": {
        "orderBy": "OrderByTopSaleDESC",
        "paginationDotsVisibility": "never",
        "productList": {
          "maxItems": 20,
          "itemsPerPage": 4,
          "minItemsPerPage": 1,
          "arrows": true,
          "showTitle":false
        }
      }
    }
}
